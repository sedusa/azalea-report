{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@azalea/shared": ["../../packages/shared"],
      "@azalea/shared/*": ["../../packages/shared/*"],
      "@azalea/ui": ["../../packages/ui"],
      "@azalea/ui/*": ["../../packages/ui/*"],
      "@azalea/sections": ["../../packages/sections"],
      "@azalea/sections/*": ["../../packages/sections/*"],
      "@convex": ["../../convex"],
      "@convex/*": ["../../convex/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
