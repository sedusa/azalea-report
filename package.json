{
  "name": "azalea-report",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@azalea/web",
    "dev:admin": "turbo dev --filter=@azalea/admin",
    "build": "turbo build",
    "build:web": "turbo build --filter=@azalea/web",
    "build:admin": "turbo build --filter=@azalea/admin",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "deploy:prod": "bun run scripts/deploy-to-prod.ts",
    "deploy:prod:functions": "bun run scripts/deploy-to-prod.ts --functions-only",
    "deploy:prod:data": "bun run scripts/deploy-to-prod.ts --data-only",
    "migrate:storage": "bun run scripts/migrate-storage.ts"
  },
  "devDependencies": {
    "@types/sanitize-html": "^2.16.0",
    "convex": "^1.17.0",
    "frontmatter-markdown-loader": "^3.7.0",
    "gray-matter": "^4.0.3",
    "tsx": "^4.21.0",
    "turbo": "^2.0.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "sanitize-html": "^2.17.0"
  }
}
